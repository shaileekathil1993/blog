<div class="container">
  <%= form_for([@blog, @blog.comments.build]) do |f| %>
    <div class="row">
      <div class="col-md-6">
        <div class="col-md-6">
          <%= f.label :commenter, "Commenter:" %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :commenter, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6"> 
      </div>
    </div><br>
    <div class="row">
      <div class="col-md-6">
        <div class="col-md-6">
          <%= f.label :body, "Body:" %>
        </div>
        <div class="col-md-6">
          <%= f.text_area :body, class: "form-control" %>
        </div>
      </div>
    </div><br>
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <%= f.submit "Submit", class: "btn btn-success" %>
     </div>
   </div>
  <% end %>
</div>