<div class="container">
<h2 style="text-align: center;">Edit comment</h2>
<%= form_for([@blog, @comment], :method=>"patch") do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%= f.label :commenter %><br>
      <%= f.text_field :commenter, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.label :body %><br>
      <%= f.text_area :body, class: "form-control" %>
    </div>
  </div><br>
  <p>
    <%= f.submit "Update", class: "btn btn-success" %>
  </p>
<% end %>
 
<%= link_to 'Back', blogs_path, class: "btn btn-primary" %>
</div>