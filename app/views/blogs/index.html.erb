<div class="container">
  <h1 style="text-align: center;">Listing blogs</h1>
   <%= link_to 'New blog', new_blog_path, class: "pull-right btn btn-success"%>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Image</th>
       <th colspan="5"></th>
      </tr>
    </thead>
    <tbody> 
      <% @blogs.each_with_index do |blog, index| %>
        <tr>
          <th scope="row"><%= index+1 %></th>
          <td><%= blog.title %></td>
          <td><%= image_tag blog.image, :height=>"100", :width=>"100" %></td>
          <td><%= link_to 'Show', blog_path(blog) %></td>
          <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
          <td><%= link_to 'Destroy', blog_path(blog),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
                  <td><p><%= blog.likes.count %> <%= (blog.likes.count) == 1 ? 'Like' : 'Likes'%></p></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>